@model List<Gif>
@{
    string successMsg = ViewData["Success"] as string;
}
@if(ViewData["Success"] != null)
{
    <h4>@successMsg</h4>
}

<h1>All Gifs</h1>
<table>
    @for (int i = 0; i < Model.Count; i += 3)
    {
        <tr>
            @for (int j = i; j < i + 3 && j < Model.Count; j++)
            {
                <td>
                    <img src="@Model[j].Url" alt="@Model[j].Name" style="width: 200px; height: 200px;" />
                    <p>@Model[j].Name</p>
                    <p>@Model[j].Rating</p>

                </td>
            }
        </tr>
        if (i >= 3) break; // Limit to two rows
    }
</table>